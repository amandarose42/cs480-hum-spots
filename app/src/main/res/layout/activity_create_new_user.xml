<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mist_mountain"
    android:orientation="vertical">

    <TextView
        android:id="@+id/create_tv"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etUserNameCreate"
        android:layout_alignLeft="@+id/etUserNameCreate"
        android:layout_alignEnd="@+id/etUserNameCreate"
        android:layout_alignRight="@+id/etUserNameCreate"
        android:layout_alignBottom="@+id/etUserNameCreate"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="125dp"
        android:layout_marginBottom="50dp"
        android:background="#00FFFFFF"
        android:text="Create New User"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etUserNameCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="84dp"
        android:background="#77FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="User Name" />

    <EditText
        android:id="@+id/etEmailCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etUserNameCreate"
        android:layout_alignStart="@+id/etUserNameCreate"
        android:layout_alignLeft="@+id/etUserNameCreate"
        android:layout_alignEnd="@+id/etUserNameCreate"
        android:layout_alignRight="@+id/etUserNameCreate"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="63dp"
        android:background="#78FFFFFF"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Email" />

    <EditText
        android:id="@+id/etPasswordCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEmailCreate"
        android:layout_alignStart="@+id/etEmailCreate"
        android:layout_alignLeft="@+id/etEmailCreate"
        android:layout_alignEnd="@+id/etEmailCreate"
        android:layout_alignRight="@+id/etEmailCreate"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="1dp"
        android:background="#78FFFFFF"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Password" />

    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPasswordCreate"
        android:layout_alignStart="@+id/etPasswordCreate"
        android:layout_alignLeft="@+id/etPasswordCreate"
        android:layout_alignEnd="@+id/etPasswordCreate"
        android:layout_alignRight="@+id/etPasswordCreate"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="-4dp"
        android:background="#78FFFFFF"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Confirm Password" />

    <Button
        android:id="@+id/btnCreateUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etConfirmPassword"
        android:layout_alignStart="@+id/etConfirmPassword"
        android:layout_alignLeft="@+id/etConfirmPassword"
        android:layout_alignEnd="@+id/etConfirmPassword"
        android:layout_alignRight="@+id/etConfirmPassword"
        android:layout_marginStart="71dp"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:text="Create" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etConfirmPassword"
        android:layout_alignStart="@+id/etConfirmPassword"
        android:layout_alignLeft="@+id/etConfirmPassword"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="-30dp"
        android:background="#4DFFFFFF"
        android:text="Confirm Password"
        android:textColor="#000000"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etPasswordCreate"
        android:layout_alignStart="@+id/etPasswordCreate"
        android:layout_alignLeft="@+id/etPasswordCreate"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="-30dp"
        android:background="#4DFFFFFF"
        android:text="Password"
        android:textColor="#000000"
        android:textIsSelectable="false" />
</RelativeLayout>
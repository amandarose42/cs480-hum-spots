<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mist_mountain">

    <TextView
        android:id="@+id/tvSettingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="41dp"
        android:text="Settings"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="17dp" />

    <TextView
        android:id="@+id/tvProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSettingsTitle"
        android:layout_alignStart="@+id/tvSettingsTitle"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:text="Profile: "
        android:textColor="#040404"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProfile"
        android:layout_marginStart="32dp"
        android:layout_marginTop="-20dp"
        android:layout_toEndOf="@+id/tvProfile"
        android:textColor="#020202"
        tools:text="User Name" />

    <Button
        android:id="@+id/btnSignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserName"
        android:layout_alignStart="@+id/tvProfile"
        android:layout_marginStart="0dp"
        android:layout_marginTop="43dp"
        android:text="Sign Out" />

</RelativeLayout>